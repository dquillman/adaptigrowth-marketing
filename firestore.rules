rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ===== HELPER FUNCTIONS =====
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // ===== USER PROFILES =====
    match /users/{userId} {
      // Users can read their own profile, admins can read all
      allow read: if isOwner(userId) || isAdmin();
      
      // Users can create their own profile on signup
      allow create: if isOwner(userId) && request.resource.data.role == 'user';
      
      // Users can update their own profile (except role)
      allow update: if isOwner(userId) && 
                       !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']);
      
      // Only admins can change roles
      allow update: if isAdmin();
      
      // Subcollections under users/{userId}
      match /{document=**} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // ===== ADMIN-ONLY COLLECTIONS =====
    
    // Issues - Users can create (bug reports), only admins can read/manage
    // Issues reporting (only logged in users can create)
    match /issues/{issueId} {
      allow create: if isAuthenticated();
      allow read, update, delete: if isAdmin();
    }
    
    // Testers - Admin only
    match /testers/{testerId} {
      allow read, write: if isAdmin();
    }
    
    // Exam Health Metrics - Admin only
    match /examHealth/{docId} {
      allow read, write: if isAdmin();
    }
    
    // User Sessions tracking
    match /user_sessions/{sessionId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Allow update if doc missing (DB returns Not Found) OR if user owns it and only touches allowed fields
      allow update: if isAuthenticated() && 
                    (resource == null || 
                     (resource.data.userId == request.auth.uid && 
                      request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastSeenAt', 'logoutAt', 'endedBy', 'durationSec'])));
      // Allow read if doc missing (DB returns Not Found) OR if user owns it OR if admin
      allow read: if isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid) || isAdmin();
    }

    // System Metrics - Admin only
    match /system_metrics/{docId} {
      allow read, write: if isAdmin();
    }
    
    // Exam Update Sources - Admin only
    match /exam_update_sources/{docId} {
      allow read, write: if isAdmin();
    }
    
    // ===== USER-ACCESSIBLE COLLECTIONS =====
    
    // Questions - Public read, admin write
    match /questions/{questionId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // User Mastery - Users can read/write their own
    match /userMastery/{docId} {
      allow read, write: if isAuthenticated() && 
                            docId.matches('^' + request.auth.uid + '_.*');
    }
    
    // Quiz Attempts - Users can create their own, read their own
    match /quizAttempts/{attemptId} {
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
    }
    
    // Study Plans - Users can manage their own
    match /study_plans/{planId} {
      allow read, write: if isAuthenticated() && 
                            (resource.data.userId == request.auth.uid || 
                             request.resource.data.userId == request.auth.uid);
    }
    
    // Exams - Public read, admin write
    match /exams/{examId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Admin Workflows - Per-user, admin only
    match /admin_workflows/{userId}/{document=**} {
      allow read, write: if isAdmin() && isOwner(userId);
    }
    
    // Admin Marketing Assets - Per-user, admin only
    match /admin_marketing_assets/{userId}/{document=**} {
      allow read, write: if isAdmin() && isOwner(userId);
    }
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
